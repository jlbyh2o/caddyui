# Environment variables for Caddy UI
# Copy this file to .env and fill in your values

# Database
# Newer versions of Prisma need an absolute path here
# For Docker
DATABASE_URL="file:/usr/app/dev.db"
# For local deployments
DATABASE_URL="file:${PWD}/dev.db"

# Authentication (NextAuth.js)
# Generate a secure random string for production with: 
# node -e "console.log(crypto.randomBytes(32).toString('hex'))"
NEXTAUTH_SECRET="replace-this-with-a-secure-random-string-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Caddy Admin API
CADDY_ADMIN_URL="http://localhost:2019"

# Logging and Debug
# Set to false in production
DEBUG="false" 

# Disable Next.JS telemetry
# (and/or run `npx next telemetry disable`)
#NEXT_TELEMETRY_DISABLED=1
